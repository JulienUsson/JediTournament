<UserControl x:Class="JediTournamentWPF.View.Jedi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JediTournamentWPF.View"
             mc:Ignorable="d" d:DesignWidth="300" Height="156.865">
    <Grid Margin="10,0,0,10" Height="146" VerticalAlignment="Bottom">
        <Label x:Name="LabelNom" Content="Nom" HorizontalAlignment="Left" Height="23" Margin="30,10,0,0" VerticalAlignment="Top" Width="91" Target="{Binding ElementName=textBoxNom}"/>
        <TextBox x:Name="textBoxNom" HorizontalAlignment="Left" Height="23" Margin="30,38,0,0" TextWrapping="Wrap" Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="228"/>
        <Label x:Name="labelCondition" Content="Condition" HorizontalAlignment="Left" Height="27" Margin="30,66,0,0" VerticalAlignment="Top" Width="83" Target="{Binding ElementName=textBoxCondition}"/>
        <TextBox x:Name="textBoxCondition" HorizontalAlignment="Left" Height="26" Margin="30,93,0,0" TextWrapping="Wrap" Text="{Binding Path=Condition, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="228"/>

    </Grid>
</UserControl>

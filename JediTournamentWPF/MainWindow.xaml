<Window x:Class="JediTournamentWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jedi Tournament" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonJedis" Content="Jedis" Grid.Column="0"/>
            <Button x:Name="buttonStades" Content="Stades" Grid.Column="1"/>
            <Button x:Name="buttonMatchs" Content="Matchs" Grid.Column="2"/>
            <Button x:Name="buttonCaracteristiques" Content="Caractéristiques" Grid.Column="3"/>
            <Button x:Name="buttonBonus" Content="Bonus" Grid.Column="4"/>
            <Button x:Name="buttonExporter" Content="Exporter les Jedis" Grid.Column="5"/>
        </Grid>
        <ListView x:Name="listView"  Grid.Row="1">
            
        </ListView>
    </Grid>
</Window>
